							<li>
								<a routerlink="signup" ng-reflect-router-link="signup" href="/signup">Signup</a>
							</li>
						</ul>
					</div>
				</div>
				<div class="col-lg-3 col-md-4 col-sm-6">
					<div class="widget">
						<h6 class="widget_title">Contact Info</h6>
						<ul class="contact_info contact_info_light">
							{% if app.session.get("setting") is not null %}
								<li>
									<i class="ti-location-pin"></i>
									<p>
										{{ app.session.get("setting").street }}<br>
										{{ app.session.get("setting").codePostal }}<br>
										{{ app.session.get("setting").city }}
									</p>
								</li>
							{% else %}
								<li>
									<i class="ti-location-pin"></i>
									<p>Adresse non disponible</p>
								</li>
							{% endif %}

							{% if app.session.get("setting") is not null and app.session.get("setting").email is not empty %}
								<li>
									<i class="ti-email"></i>
									<a href="mailto:{{ app.session.get('setting').email }}">{{ app.session.get("setting").email }}</a>
								</li>
							{% else %}
								<li>
									<i class="ti-email"></i>
									<p>Email non disponible</p>
								</li>
							{% endif %}

							{% if app.session.get("setting") is not null and app.session.get("setting").phone is not empty %}
								<li>
									<i class="ti-mobile"></i>
									<p>+{{ app.session.get("setting").phone }}</p>
								</li>
							{% else %}
								<li>
									<i class="ti-mobile"></i>
									<p>Téléphone non disponible</p>
								</li>
							{% endif %}

						</ul>
