		<div class="container">
			<div class="row">
				<div class="col-lg-3 col-md-6 col-sm-12">
					<div class="widget">
						<div class="footer_logo">
							<a href="/">
								{% if app.session.get("setting") is not null %}
									<h2>{{ app.session.get("setting").websiteName }}</h2>
								{% else %}
									<h2>Nom du site par défaut</h2>
								{% endif %}
							</a>
						</div>
						<p>
							{% if app.session.get("setting") is not null %}
								<p>{{ app.session.get("setting").description }}</p>
							{% else %}
								<p>Description par défaut du site.</p>
							{% endif %}
						</p>
					</div>
					<div class="widget">
						<ul class="social_icons social_white">
							{% if app.session.get("setting") is not null and app.session.get("setting").facebookLink is not empty %}
								<li>
									<a target="_blank" href="{{ app.session.get('setting').facebookLink }}">
										<i class="ion-social-facebook"></i>
									</a>
								</li>
							{% endif %}
							<li></li>
							<li></li>
							{% if app.session.get("setting") is not null and app.session.get("setting").youtubeLink is not empty %}
								<li>
									<a target="_blank" href="{{ app.session.get('setting').youtubeLink }}">
										<i class="ion-social-youtube-outline"></i>
									</a>
								</li>
							{% endif %}
							{% if app.session.get("setting") is not null and app.session.get("setting").instagramLink is not empty %}
								<li>
									<a target="_blank" href="{{ app.session.get('setting').instagramLink }}">
										<i class="ion-social-instagram-outline"></i>
									</a>
								</li>
							{% endif %}
						</ul>
					</div>
				</div>
