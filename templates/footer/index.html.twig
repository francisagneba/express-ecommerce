		<div class="container">
			<div class="row">
				<div class="col-md-6">
					{% if app.session.get("setting") is not null and app.session.get("setting").copyright is not empty %}
						<p class="mb-md-0 text-center text-md-start">
							{{ app.session.get("setting").copyright }}
						</p>
					{% else %}
						<p class="mb-md-0 text-center text-md-start">
							©
							{{ "now"|date("Y") }}
